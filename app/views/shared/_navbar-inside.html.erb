<div class="navbar navbar-expand-sm navbar-light navbar-lewagon-inside">
  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav-inside mr-auto list-unstyled">
      <% if user_signed_in? %>
        <li class="nav-item dropdown">
          <i class="fa fa-search" aria-hidden="true"></i>
          <i class="fa fa-bell" aria-hidden="true"></i> |
          <span class="current-user-name"><%= current_user.name.capitalize %></span>
          <%= cl_image_tag current_user.photo.key, class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <%= link_to "My dashboard", competitors_path, class: "dropdown-item" %>
            <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
          </div>
        </li>
      <% else %>
        <li class="nav-item">
          <%= link_to "Login", new_user_session_path, class: "nav-link" %>
        </li>
      <% end %>
    </ul>
  </div>
</div>
