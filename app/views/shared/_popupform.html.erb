      <%= f.input :category, collection: { "Legal information" => "ID", "Human ressource" => "HR", "Key figures" => "Key Figures", "Brands" => "Brands" } %>
      <%= f.input :content, label: "Message" %>
      <button id="cancelMessage">Cancel</button> <%= f.button :submit, "Send", id: "createMessage" %>
    <% end %>
  </dialog>

  
